<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryVariant">@color/colorPrimary</item>
        <item name="colorOnPrimary">@color/font_color</item>
        <item name="colorOnSurface">@color/font_color</item>
        <item name="colorOnPrimarySurface">@color/font_color</item>
        <item name="colorSecondary">@color/colorPrimaryDark</item>
        <item name="colorSecondaryVariant">@color/colorPrimaryDark</item>
        <item name="colorOnSecondary">@color/font_color</item>
        <item name="colorControlNormal">@color/font_color</item>
        <item name="android:windowLightStatusBar" tools:ignore="NewApi">true</item>
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
        <item name="actionMenuTextColor">@color/font_color</item>
        <item name="android:textColorPrimary">@color/font_color</item>
        <item name="android:textCursorDrawable">@color/font_color</item>
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="Theme.Maps" parent="Theme.MaterialComponents.Light">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryVariant">@color/colorPrimary</item>
        <item name="colorOnPrimary">@color/font_color</item>
        <item name="colorOnSurface">@color/font_color</item>
        <item name="colorOnPrimarySurface">@color/font_color</item>
        <item name="colorSecondary">@color/colorPrimaryDark</item>
        <item name="colorSecondaryVariant">@color/colorPrimaryDark</item>
        <item name="android:windowLightStatusBar" tools:ignore="NewApi">true</item>
        <item name="colorOnSecondary">@color/font_color</item>
        <item name="colorControlNormal">@color/font_color</item>
        <item name="android:statusBarColor">@color/colorPrimary</item>
        <item name="android:textCursorDrawable">@color/font_color</item>
        <item name="actionMenuTextColor">@color/font_color</item>
        <item name="android:textColorPrimary">@color/font_color</item>
    </style>
</resources>
